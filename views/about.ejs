    }

    .door .door-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: white;
      font-size: 1.5rem;
      font-weight: bold;
      animation: blink 1.5s infinite step-start; /* Blinking effect */
    }

